<% if @book %>

    <div class="flex flex-col p-16">
        <h1 class="text-navy-blue text-4xl font-bold mb-8">Search Results</h1>
        <div class="flex flex-col md:flex-row items-center w-full">
            <div class="flex pr-16">
                <% if @book.image.attached? %>
                    <%= image_tag(@book.image.url, class: "w-[300px] h-[300px] md:mr-6") %>
                <% end %>
            </div>

            <div class="md:flex-2 md:w-4/6">
                <div class="flex flex-col">
                    <p class="text-2xl text-navy-blue font-bold mb-8"><%= @book.title %></p>
                    <p class="text-xl text-navy-blue font-semibold mb-8">by <%= @book.all_authors %></p>

                    <ul class="list-none">
                        <li class="mb-4">
                            <span class="text-lg text-navy-blue font-bold">Edition:</span> 
                            <span class="text-lg text-purple font-bold"><%= @book.edition rescue nil %></span>
                        </li>

                        <li class="mb-4">
                            <span class="text-lg text-navy-blue font-bold">Price:</span> 
                            <span class="text-lg text-purple font-bold">PHP <%= number_with_precision(@book.list_price, precision: 2) %></span>
                        </li>

                        <li class="mb-4">
                            <span class="text-lg text-navy-blue font-bold">ISBN:</span> 
                            <span class="text-lg text-purple font-bold"><%= @book.isbn_13 %></span>
                        </li>

                        <li class="mb-4">
                            <span class="text-lg text-navy-blue font-bold">Publication Year:</span> 
                            <span class="text-lg text-purple font-bold"><%= @book.publication_year %></span>
                        </li>
    
                        <li>
                            <span class="text-lg text-navy-blue font-bold">Publisher:</span> 
                            <span class="text-lg text-purple font-bold"><%= @book.publisher.name %></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

<% else %>
    <% if flash[:error] %>
        <div class="p-16">
            <div class="flex items-center p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                <svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                </svg>
                <span class="sr-only">Info</span>
                <div>
                    <span class="font-medium"><%= flash[:error] %></span>
                </div>
            </div>
        </div>
    <% end %>
<% end %>